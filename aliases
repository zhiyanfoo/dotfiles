####### General

alias ls='ls -G'        #show colors
alias sl='ls'
alias s='ls'
alias l='ls'
alias la='ls -a'       # Compact view, show hidden
alias ll='ls -al'
alias l1='ls -1'

alias _="sudo"

alias ..='cd ..'         # Go up one directory
alias ...='cd ../..'     # Go up two directories
alias ....='cd ../../..' # Go up three directories
alias -- -='cd -'        # Go back

alias c="clear"

alias less='less -R'
alias grep='grep --color=auto'

alias ghost='\gs'

